          .tab-content
            #rus.tab-pane.fade.show.active(role='tabpanel', aria-labelledby='home-tab')
              input.form-control(type='text' name="head-eng" placeholder='Введите текст')
            #eng.tab-pane.fade(role='tabpanel', aria-labelledby='profile-tab')
              input.form-control(type='text' name="head-rus" placeholder='Введите текст')

